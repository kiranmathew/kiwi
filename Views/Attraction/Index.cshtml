@model List<kiwi.Models.Attraction>
@{
    ViewBag.Title = "KiwiLand";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link href="~/Content/assets/css/neon-theme-edited.css" rel="stylesheet" />
    <link href="~/Content/css/Custom.css" rel="stylesheet" />
    @*<link href="~/Content/assets/css/bootstrap.css" rel="stylesheet" />*@

    @*<link href="~/Content/bootstrap.css" rel="stylesheet" />*@
   @* <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">*@

    <title>Attractions</title>
</head>
<body style="background: url('../Content/images/details-1-background.jpg') no-repeat fixed; background-size: cover;">
    <h2 style="color:antiquewhite">Attractions</h2>

    <div class="gallery-env">
        <div class="row">
            @foreach (var item in Model)
            {
                <input type="hidden" id="hdnAttractionId" value="@item.AttractionId" />
                <div id="popupid" class="col-sm-4 grow">
                    <article class="album">
                        <header>
                            <div style="background-color:black;height:240px; width:320px; padding:10px ">
                                <a href=""> <img src="~/Content/images/Attraction/@item.AttractionImage"> </a> @*<a href="#" class="album-options">
                                    <i class="entypo-cog"></i>
                                </a>*@
                            </div>
                            @*@Html.ActionLink("Edit", "Edit", new { id = item.EmailCredentialID }, new { @class = "btn btn-info" })*@


                        </header>
                        <section class="album-info"> <h3><a href="https://demo.neontheme.com/extra/gallery-single/">@item.AttractionName</a></h3> <p>@item.AttractionLocation </p> </section>
                        <footer>
                            @Html.ActionLink("View", "Details", "Attraction", new { id = item.AttractionId }, new { @class = "btn btn-primary btn-lg btn-block" })
                            @*<div class="album-images-count">
                                    <i class="entypo-picture"></i>
                                </div>
                                <div class="album-options"> <a href="#"> <i class="entypo-cog"></i> </a> <a href="#"> <i class="entypo-trash"></i> </a> </div>*@
                        </footer>
                    </article>
                </div>
            }
        </div>
    </div>

    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
</body>
</html>












