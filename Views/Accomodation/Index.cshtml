@model IEnumerable<kiwi.Models.Accomodation>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_New.cshtml";

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    @*<link href="~/Content/css/styles.css" rel="stylesheet" />*@
    @*<link href="~/Content/assets/css/css/neon-theme.css" rel="stylesheet" />*@
    @*<link href="~/Content/assets/css/bootstrap.css" rel="stylesheet" />*@
    <link href="~/Content/assets/css/neon.css" rel="stylesheet" />
    @*<link href="~/Content/assets/css/neon-core.css" rel="stylesheet" />*@
    <link href="~/Content/assets/css/font-icons/entypo/css/entypo.css" rel="stylesheet" />
    <!-- Favicon  -->
    <link rel="icon" href="images/favicon.png">
</head>
<body class="bg_image" data-spy="scroll" data-target=".fixed-top">
    
        <h2>Accomodations</h2>


        @foreach (var item in Model)
        {

            <div class="member-entry grow">

                <a href="https://demo.neontheme.com/extra/timeline/" class="member-img"> <img src="~/Content/uploads/@item.AccomodationImage" class="img-rounded"> <i class="entypo-forward"></i> </a>
                <div class="member-details">
                    <h4> <a href="https://demo.neontheme.com/extra/timeline/"> @item.AccomodationName</a> </h4>
                    <div class="row info-list">
                        <div class="col-sm-4">
                            <i class="entypo-briefcase"></i>
                            Co-Founder at <a href="#">Complete Tech</a>
                        </div>
                        <div class="col-sm-4">
                            <i class="entypo-twitter"></i> <a href="#"></a>
                        </div>
                        <div class="col-sm-4">
                            <i class="entypo-facebook"></i> <a href="#">fb.me/johnnie</a>
                        </div>
                        <div class="clear">
                        </div>
                        <div class="col-sm-4">
                            <i class="entypo-location"></i> <a href="#">@item.AccomodationAddress</a>
                        </div>
                        <div class="col-sm-4">
                            <i class="entypo-mail"></i> <a href="#">@item.AccomodationEmail</a>
                        </div>
                        <div class="col-sm-4">
                            <i class="entypo-linkedin"></i> <a href="#">johnkennedy</a>
                        </div>
                    </div>
                </div>
            </div>

        }
    
</body>
</html>


